<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:vm="using:DatabaseTask.ViewModels"
		xmlns:dialogues="clr-namespace:DatabaseTask.Services.Dialogues.Base"
		dialogues:DialogueManager.Register="UnusedFilesDialogues"
        x:Class="DatabaseTask.Views.Analyse.DuplicatesFilesWindow"
        Width="500"
        Height="400"
        Icon="/Assets/window.ico"
        Title="Анализ неиспользуемых файлов">

    <Grid RowDefinitions="*, Auto, Auto">
        <DataGrid 
              AutoGenerateColumns="False"
              CanUserResizeColumns="True"
              GridLinesVisibility="All">
        
        <DataGrid.Columns>
            <DataGridTemplateColumn Header="В базу"
                                    Width="*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <RadioButton GroupName="еуые" 
                                     HorizontalAlignment="Center"
                                     ToolTip.Tip="Сделать этот путь основным в БД"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <DataGridTemplateColumn Header="Удалить"
                                    Width="*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <CheckBox 
                                  HorizontalAlignment="Center"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

            <DataGridTextColumn Header="Имя файла" 
                                IsReadOnly="True"
                                Width="*"/>
            
            <DataGridTemplateColumn Header="Полный путь" 
                                    Width="*">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock
                                   Margin="5,0"
                                   VerticalAlignment="Center"
                                   />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>

        </DataGrid.Columns>

        <!--<DataGrid.Styles>
            <Style Selector="DataGridRow">
                <Style Selector="^[(IsInDatabase=True)]">
                    <Setter Property="Background" Value="#1A00FF00"/> --><!-- Легкий зеленый фон --><!--
                </Style>
            </Style>
        </DataGrid.Styles>-->
    </DataGrid>
        <StackPanel Spacing="10" 
					Margin="10, 10, 0, 0" 
					HorizontalAlignment="Left" 
					Orientation="Horizontal" 
					Grid.Row="1">
			<StackPanel.Styles>
				<Style Selector="Button">
					<Setter Property="HorizontalContentAlignment" Value="Center"/>
				</Style>
			</StackPanel.Styles>
			<Button 
				MinWidth="70" 
				>
				Выдёлить всё
			</Button>
			<Button 
				MinWidth="70"
				>
				Снять выделение</Button>
		</StackPanel>
        <StackPanel Spacing="10" 
					Margin="0, 0, 10, 10" 
					MaxHeight="200"
					HorizontalAlignment="Right" 
					Orientation="Horizontal" 
					Grid.Row="2">
			<StackPanel.Styles>
				<Style Selector="Button">
					<Setter Property="HorizontalContentAlignment" Value="Center"/>
				</Style>
			</StackPanel.Styles>
			<Button 
				MinWidth="70" 
				Classes="ApplyButton"
				>
				Ok
			</Button>
			<Button 
				MinWidth="70"
				>
				Отмена</Button>
		</StackPanel>
    </Grid>

</Window>
