<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Add Styles Here -->
	<Style Selector=":is(TopLevel)">
		<Setter Property="FontWeight" Value="{StaticResource ControlContentThemeFontWeight}"/>
		<Setter Property="FontSize" Value="{StaticResource ControlContentThemeFontSize}"/>
	</Style>
	<Style Selector="Svg">
		<Setter Property="Width" Value="{StaticResource SvgWidth}"/>
		<Setter Property="Height" Value="{StaticResource SvgHeight}"/>
	</Style>
	<Style Selector="Button">
		<Setter Property="Background" Value="Transparent"/>
	</Style>
	<Style Selector="Button.ApplyButton">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Background" Value="#3b6ac6"/>
	</Style>
	<Style Selector="Button.ApplyButton:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="#2b5097"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>
</Styles>
